@using MLT.Rifa2.MVC.ViewModel
@model OrganizationViewModel

@{
    ViewData["Title"] = "Editar organización " + Model.OrganizationName;
    var mensajeError = TempData["mensajeError"];
    var controller = "Organization";
}

<div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Editando organización @Model.OrganizationName</h5>
            <a asp-action="List" type="button" class="btn"><i class="bi bi-arrow-left"></i></a>
        </div>
        @if (!Model.IsDeleted)
        {
            <form asp-action="Edit">
                <input type="hidden" asp-for="OrganizationId" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" asp-for="OrganizationName" placeholder="Nombre Organización" />
                                <label>Nombre Organización</label>
                                <span asp-validation-for="OrganizationName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-group mb-3">
                                <label class="mb-1">Tipo de organización</label>
                                <select class="form-select" asp-for="OrganizationTypeId"
                                    asp-items="@Model.OrganizationTypeListItems">
                                    <option value="">Selecciona un tipo de organización</option>
                                </select>
                                <span asp-validation-for="OrganizationTypeId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-check mb-3">
                                <label class="form-check-label" asp-for="IsActive">
                                    Activado
                                </label>
                                <input class="form-check-input" type="checkbox" name="IsActive" asp-for="IsActive" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" disabled />
                                <label class="form-check-label">Eliminado</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg">
                            <button type="submit" class="btn btn-primary"><i class="bi bi-pencil-fill"></i> Editar</button>
                            <button type="button" onclick="willDelete(@Model.OrganizationId, '@controller')" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Eliminar</button>
                        </div>
                    </div>
                </div>
            </form>
            <a asp-action="List" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
        }
        else
        {
            <div class="modal-body isDeleted">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="OrganizationName" placeholder="Nombre Organización" disabled />
                            <label>Nombre Organización</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <div class="form-group mb-3">
                            <label class="mb-1">Tipo de organización</label>
                            <select class="form-select" asp-for="OrganizationTypeId"
                                asp-items="@Model.OrganizationTypeListItems" disabled>
                                <option value="">Selecciona un tipo de organización</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" disabled />
                            <label class="form-check-label">Activado</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" checked disabled />
                            <label class="form-check-label">Eliminado</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <button class="btn btn-primary mb-2 disabled"><i class="bi bi-pencil-fill"></i> Editar</button>
                        <button class="btn btn-danger mb-2 disabled"><i class="bi bi-trash-fill"></i> Eliminar</button>
                    </div>
                </div>
            </div>
            <h4 class="m-5">La organización @Model.OrganizationName esta borrada, no puedes editarla.</h4>
            <a asp-action="List" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
        }
    </div>
</div>

@section Scripts{
    @if (mensajeError != null)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: '¡Error!',
                    text: '@mensajeError',
                    icon: 'error'
                });
            });
        </script>
    }
}