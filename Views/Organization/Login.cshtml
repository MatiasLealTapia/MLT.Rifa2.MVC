@using MLT.Rifa2.MVC.ViewModel
@model OrganizationLogIn
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<html>
<body>
    <div class="container col-6 mt-5">
        <h2>Iniciar sesión como organización</h2>
        <hr />
        <form asp-action="Login" method="post">
            <div class="form-group form-floating mb-4">
                <input type="text" class="form-control" id="Email" name="Email" placeholder="Correo de organización" required>
                <label for="Username" class="form-label">Correo de organización:</label>
            </div>
            <div class="form-group form-floating mb-4">
                <input type="Password" class="form-control" id="Password" name="Password" placeholder="Contraseña" required>
                <label for="Password" class="form-label">Contraseña:</label>
            </div>
            <button type="submit" class="btn btn-primary">Iniciar sesión</button>
        </form>
        <br />
    </div>
</body>
</html>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}