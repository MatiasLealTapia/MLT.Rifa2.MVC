@using MLT.Rifa2.MVC.ViewModel
@model OrganizationViewModel

@{
    ViewData["Title"] = "Añadir Organización";
    var mensajeError = TempData["mensajeError"];
}

<div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Añadiendo una organización</h5>
            <a asp-action="List" type="button" class="btn"><i class="bi bi-arrow-left"></i></a>
        </div>
        <form asp-action="Add">
            <input type="hidden" asp-for="OrganizationId" value="0" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="OrganizationName" placeholder="Nombre Organización" />
                            <label>Nombre Organización</label>
                            <span asp-validation-for="OrganizationName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <div class="form-group mb-3">
                            <label class="mb-1">Tipo de organización</label>
                            <select class="form-select" asp-for="OrganizationTypeId"
                                    asp-items="@Model.OrganizationTypeListItems">
                                <option value="">Selecciona un tipo de organización</option>
                            </select>
                            <span asp-validation-for="OrganizationTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg">
                        <div class="form-check mb-3">
                            <label class="form-check-label" asp-for="IsActive">
                                Activado
                            </label>
                            <input class="form-check-input" type="checkbox" name="IsActive" asp-for="IsActive"/>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <button type="submit" class="btn btn-success mb-2"><i class="bi bi-check-lg"></i> Crear</button>
                    </div>
                </div>
            </div>
        </form>
        <a asp-action="List" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    @if (mensajeError != null)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: '¡Error!',
                    text: '@mensajeError',
                    icon: 'error'
                });
            });
        </script>
    }
}