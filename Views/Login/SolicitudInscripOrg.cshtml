@using MLT.Rifa2.MVC.ViewModel
@model OrganizationFormViewModel
@{
    ViewData["Title"] = "Solicitud de Inscripción";
    var mensajeError = TempData["mensajeError"];
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center pt-4 mb-2">
                <h1 class="display-4"><b>Solicitud de Inscripción</b></h1>
                <h4>para organizaciones.</h4>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title pt-2">Solicitud Inscripción de Organización</h5>
                </div>
                <div class="card-body m-2">
                    <form asp-action="SolicitudInscripOrg">
                        <div class="row">
                            <div class="form-group col-12 mb-3">
                                <div class="form-floating">
                                    <select asp-for="OrganizationTypeId" class="form-select"
                                            asp-items="@Model.OrganizationTypeListItems">
                                        <option value="" selected>Seleccione una opción</option>
                                    </select>
                                    <label class="form-label">Tipo de Organización</label>
                                    <span asp-validation-for="OrganizationTypeId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12 mb-3">
                                <div class="form-floating">
                                    <input type="text" asp-for="OrganizationName" class="form-control" placeholder="Nombre de la Organización" />
                                    <label class="form-label">Nombre de la Organización</label>
                                    <span asp-validation-for="OrganizationName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12 mb-3">
                                <div class="form-floating">
                                    <input type="text" asp-for="OrganizationEmail" class="form-control" placeholder="Email de la Organización" />
                                    <label class="form-label">Email de la Organización</label>
                                    <span asp-validation-for="OrganizationEmail" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-2">
                                <div class="form-floating">
                                    <input type="text" maxlength="4" class="form-control" value="+56 9" disabled />
                                    <label class="form-label">Prefijo</label>
                                </div>
                            </div>
                            <div class="form-group col-10 mb-3">
                                <div class="form-floating">
                                    <input type="tel" maxlength="8" asp-for="OrganizationPhoneNumber" class="form-control" placeholder="Celular de la Organización" value="" />
                                    <label class="form-label">Celular de la Organización</label>
                                    <span asp-validation-for="OrganizationPhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-12 mb-3">
                                <div class="form-floating">
                                    <textarea asp-for="OrganizationFormInformation" class="form-control" placeholder="Información adicional de la Organización"></textarea>
                                    <label class="form-label">Información adicional de la Organización</label>
                                    <span asp-validation-for="OrganizationFormInformation" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Mandar solicitud</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    @if (mensajeError != null)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: '¡Error!',
                    text: '@mensajeError',
                    icon: 'error'
                });
            });
        </script>
    }
}